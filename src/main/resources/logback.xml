<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <appender name="FLAT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-4level) %logger{36} %msg %mdc %marker%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="FLAT" />
    </root>

</configuration>
